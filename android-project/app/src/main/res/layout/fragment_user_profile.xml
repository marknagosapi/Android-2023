<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

        <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cheesecake_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

        <TextView
            android:id="@+id/usernameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Username"
            android:textSize="26sp"
            android:textColor="#f68787"
            android:textStyle="bold"
            android:layout_below="@id/profileImageView"

            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_below="@id/usernameTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/emailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email"
            android:textSize="26sp"
            android:textColor="#f68787"
            android:textStyle="bold"

            android:layout_below="@id/nameEditText"

            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_below="@id/emailTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="#f68787"
            android:layout_below="@id/emailEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

</RelativeLayout>
